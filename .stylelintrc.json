{
  "extends": ["stylelint-prettier/recommended", "stylelint-config-clean-order"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.jsx", "**/*.js", "**/*.ts"],
      "customSyntax": "@stylelint/postcss-css-in-js"
    }
  ],
  "rules": {
    "length-zero-no-unit": true
  }
}
